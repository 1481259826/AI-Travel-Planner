{
  "name": "ai-travel-planner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3008 -H 0.0.0.0",
    "dev:safe": "node scripts/health-check.js --auto && npm run dev",
    "dev:pwa": "cross-env ENABLE_PWA_DEV=true next dev -p 3008 -H 0.0.0.0",
    "dev:pm2": "pm2 start ecosystem.config.js",
    "dev:check": "node scripts/health-check.js",
    "build": "next build",
    "start": "next start -p 3008 -H 0.0.0.0",
    "stop": "pm2 stop ai-travel-planner",
    "restart": "pm2 restart ai-travel-planner",
    "logs": "pm2 logs ai-travel-planner",
    "status": "pm2 list",
    "cleanup": "node scripts/health-check.js --auto",
    "lint": "next lint",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@langchain/core": "^1.1.0",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@supabase/supabase-js": "^2.48.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "idb": "^8.0.3",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.469.0",
    "next": "^15.1.4",
    "openai": "^6.6.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.10",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.4",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.2.0",
    "msw": "^2.12.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vitest": "^4.0.9"
  }
}

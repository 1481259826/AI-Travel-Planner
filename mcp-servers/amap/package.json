{
  "name": "@ai-travel-planner/amap-mcp-server",
  "version": "1.0.0",
  "description": "AMap MCP Server - Model Context Protocol server for AMap (Gaode) Map APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "amap-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:sse": "node dist/index.js --sse",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "amap",
    "gaode",
    "map",
    "weather",
    "poi",
    "route",
    "geocoding"
